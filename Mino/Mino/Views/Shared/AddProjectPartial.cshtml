@model Mino.Models.Project

<div class="add-project">
    <a href="#" class="js-project-form">
        <span class="glyphicon glyphicon-plus"></span>
        Add project
    </a>
</div>

<div class="projects-form hidden">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(p => p.Name)
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control js-project-name", placeholder = "eg. Work" })
            @Html.ValidationMessageFor(p => p.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Color)
            @Html.TextBoxFor(p => p.Color, new { @class = "form-control js-project-color", placeholder = "eg. #333333" })
            @Html.ValidationMessageFor(p => p.Name)
        </div>
    }
    <button class="btn btn-success btn-sm pull-right js-create-project">Create</button>

</div>

